<resources>
    <!-- Base application theme. -->
    <style name="Theme.HealthyWeight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/night_green</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppNameTextView">
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/app_name_text_gray</item>
        <item name="android:fontFamily">@font/righteous</item>
        <item name="android:textSize">@dimen/_35dp</item>
    </style>

    <style name="AppLogoImageStyle">
        <item name="android:src">@drawable/app_logo_night</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/night_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">@dimen/_50dp</item>
        <item name="android:layout_marginStart">@dimen/_50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_12dp</item>
    </style>
    
    <style name="SignUpTextStyle">
        <item name="android:textColor">@color/night_green</item>
        <item name="android:text">@string/sign_up_now</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/righteous</item>
    </style>

    <style name="InputEntryEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_layout_night_state</item>
        <item name="hintTextColor">@color/night_green</item>
    </style>

</resources>