<resources>
    <!-- Base application theme. -->
    <style name="Theme.HealthyWeight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/day_green</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/day_green</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppNameTextView">
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/righteous</item>
        <item name="android:textSize">@dimen/_35dp</item>
    </style>

    <style name="AppLogoImageStyle">
        <item name="android:src">@drawable/app_logo_day</item>
    </style>
    
    <style name="EnterButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/day_green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SignUpTextStyle">
        <item name="android:textColor">@color/day_green</item>
        <item name="android:text">@string/sign_up_now</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/righteous</item>
    </style>

    <style name="InputEntryEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_layout_day_state</item>
        <item name="hintTextColor">@color/day_green</item>
    </style>

</resources>