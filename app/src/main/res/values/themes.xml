<resources>
    <!-- Base application theme. -->
    <style name="Theme.HealthyWeight" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HealthyWeight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppNameTextView">
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/righteous</item>
        <item name="android:textSize">@dimen/_35dp</item>
    </style>

    <style name="AppLogoImageStyle">
        <item name="android:src">@drawable/app_logo_day</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">@dimen/_50dp</item>
        <item name="android:layout_marginStart">@dimen/_50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_12dp</item>
    </style>

    <style name="SignUpTextStyle">
        <item name="android:textColor">@color/green</item>
        <item name="android:text">@string/sign_up_now</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="InputEntryEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/green</item>
        <item name="hintTextColor">@color/green</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_50dp</item>
        <item name="android:layout_marginEnd">@dimen/_50dp</item>
        <item name="android:layout_marginTop">@dimen/_10dp</item>
    </style>

    <style name="SignUpMemberInformationText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/lemonmilk</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/_32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_50dp</item>
    </style>

</resources>